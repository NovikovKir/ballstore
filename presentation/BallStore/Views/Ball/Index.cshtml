@model Ball

@{
    ViewData["Title"] = Model.Brand + " " + Model.Model;
}

<h1>@Model.Name @Model.Brand @Model.Model</h1>
<p>@Model.Description</p>
<p>Цена: <strong>@Model.Price</strong> рублей</p>
<form action="@Url.Action("Add", "Cart")" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button class="btn btn-outline-success" type="submit">В корзину</button>
</form>
